<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/verylightyellow"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:backgroundTint="@color/black"
            android:layout_marginStart="25dp"
            android:id="@+id/imgbtn_back"
            android:layout_marginLeft="25dp"></ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Detail Resto"
            android:textColor="@color/black"
            android:textSize="22dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <ImageView
            android:id="@+id/img_restoimage"
            android:layout_width="272dp"
            android:layout_height="181dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-200dp"
            android:background="@drawable/ic_rounded15"
            android:backgroundTint="@color/yellow"
            android:foregroundGravity="center"></ImageView>




        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Resto"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"></TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/ic_rounded15"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/poppins_bold"
            android:text="Add to favorite"
            android:textSize="20dp"></com.google.android.material.button.MaterialButton>




       <LinearLayout
           android:layout_marginStart="100dp"
           android:id="@+id/linear_rating"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:orientation="horizontal"
           android:layout_below="@+id/btn_favorite"
           android:layout_marginTop="25dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Rating"
               android:textSize="20dp"
               android:layout_marginEnd="55dp"
               android:fontFamily="@font/poppins_bold"
               android:textColor="@color/black"></TextView>

           <ImageView
               android:layout_gravity="center"
               android:id="@+id/img_star1"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_baseline_star_24"
               android:tint="@color/yellow"></ImageView>

           <ImageView
               android:layout_gravity="center"
               android:id="@+id/img_star2"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_baseline_star_24"
               android:tint="@color/yellow"></ImageView>
           <ImageView
               android:layout_gravity="center"
               android:id="@+id/img_star3"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_baseline_star_24"
               android:tint="@color/yellow"></ImageView>
           <ImageView
               android:layout_gravity="center"
               android:id="@+id/img_star4"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_baseline_star_24"
               android:tint="@color/yellow"></ImageView>
           <ImageView
               android:layout_gravity="center"
               android:id="@+id/img_star5"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_baseline_star_24"
               android:tint="@color/yellow"></ImageView>
       </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_desc"
            android:layout_marginStart="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_rating"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."
                android:textSize="13dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/txt_location"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Semarang"
                android:textColor="@color/black"
                android:textSize="13dp"></TextView>

        </LinearLayout>
       </RelativeLayout>
          </LinearLayout>
